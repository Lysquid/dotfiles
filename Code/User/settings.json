{
  "editor.cursorBlinking": "solid",
  "editor.smoothScrolling": true,
  "editor.fontFamily": "JetBrains Mono, Symbols Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.suggestSelection": "first",

  "files.autoSave": "afterDelay",

  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.indent": 10,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editorAssociations": {
    "*.png": "imagePreview.previewEditor",
    "*.jpg": "imagePreview.previewEditor"
  },

  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",
  
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "debug.toolBarLocation": "docked",
  "debug.console.closeOnEnd": true,

  "terminal.integrated.cursorStyle": "line",
  
  "telemetry.telemetryLevel": "off",
  
  "update.mode": "manual",

  "security.workspace.trust.enabled": false,

  // Spell Checker
  "cSpell.language": "en,fr",
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.userWords": [
    "Erglace",
    "keymap",
    "klayan",
    "minigrep"
  ],
  "languageToolLinter.languageTool.ignoredWordsGlobal": [
    "erglace"
  ],

  // Copilot
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  // Git
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "git.blame.editorDecoration.enabled": false,

  // Python
  "python.defaultInterpreterPath": "/bin/python",

  // XML
  "redhat.telemetry.enabled": false,

  // Latex
  "latex-workshop.view.pdf.invert": 0.88,
  "latex-workshop.view.pdf.invertMode.grayscale": 0,
  "latex-workshop.latex.autoBuild.run": "never",
  "[latex]": {
    "editor.wordWrap": "on"
  }
}