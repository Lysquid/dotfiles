# Example : /etc/sway/config

# Lock session on startup
exec swaylock

# Fix GTK+ applications take 20 seconds to start
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK




### Variables

# Wallpapers
set $wallpaper1 wallhaven-8xg6qy.jpg
set $wallpaper2 wallhaven-9mel2k.png

# Screens
set $laptop eDP-1
set $monitor HDMI-A-2

# Leader key
set $mod Mod4

# Home row direction
set $left h
set $down j
set $up k
set $right l

# Preferences
set $move_strength 100 px





### General

# Outputs position
output $laptop position 0,180
output $monitor mode 1920x1080@120Hz position 1600,0 adaptive_sync on

# Wallpapers
output $laptop bg ~/Pictures/Wallpapers/PC/$wallpaper1 fill
output $monitor bg ~/Pictures/Wallpapers/PC/$wallpaper2 fill

# Workspaces assignements to outputs
workspace 1 output $monitor
workspace 2 output $monitor
workspace 3 output $monitor
workspace 4 output $monitor
workspace 5 output $monitor
workspace 6 output $monitor
workspace 7 output $laptop
workspace 8 output $laptop
workspace 9 output $laptop
workspace 10 output $laptop

# Keyboard
input type:keyboard {
    xkb_layout us,fr
    xkb_variant ,lafayette42
    xkb_options caps:escape_shifted_capslock,grp:alt_space_toggle
    xkb_numlock enabled
}

# Touchpad
input type:touchpad {
    # disabled by default
    events disabled
    tap enabled
    natural_scroll enabled
    # disable while typing
    dwt enabled     
}

# Cursor
seat * {
    hide_cursor when-typing enable
    xcursor_theme Vimix-white-cursors
}

# Font
font JetBrainsMono Nerd Font 10

# Floating modifier
floating_modifier $mod normal

# Auto focus urgent windows
focus_on_window_activation focus

# Bar
bar swaybar_command waybar

# Color scheme
# class                 border  backgr. text    indicator child_border
client.focused          #333333 #333333 #bbbbbb #3a94da   #3a94da
client.focused_inactive #333333 #333333 #bbbbbb #333333   #333333
client.unfocused        #181818 #181818 #bbbbbb #333333   #333333
client.urgent           #e34444 #e34444 #bbbbbb #e34444   #e34444
client.placeholder      #000000 #000000 #bbbbbb #000000   #000000
client.background       #000000

# Gaps
gaps inner 10
smart_borders no_gaps
smart_gaps on

# Borders
default_border pixel 2

# Inhibit idle in fullscreen
for_window [class="^.*"] inhibit_idle fullscreen
for_window [app_id="^.*"] inhibit_idle fullscreen
for_window [title="^codelldb$"] resize shrink width 40 ppt

# Apps assignements to workspaces
assign [app_id="firefox"] workspace number 1
assign [app_id="thunderbird"] workspace number 3
assign [class="Code"] workspace number 2
assign [class="discord"] workspace number 10
assign [class="Signal Beta"] workspace number 10
for_window [class="Signal Beta"] layout tabbed
for_window [class="Spotify"] move container to workspace number 9

# Floating windows
for_window [app_id="gcolor3"] floating enable
for_window [app_id="qalculate-gtk"] floating enable
for_window [app_id="wihotspot-gui"] floating enable
for_window [app_id="nm-connection-editor"] floating enable
for_window [app_id="nm-openconnect-auth-dialog"] floating enable
for_window [app_id="org.fcitx.fcitx5-config-qt"] floating enable
for_window [app_id="wdisplays"] floating enable

# Startup
exec lxpolkit
exec nm-applet --indicator
exec playerctld daemon
exec mako
exec udiskie --smart-tray --no-file-manager --no-notify
exec trash-empty -f 30
exec fcitx5 -d
exec swayidle -w
exec wl-paste -t text --watch clipman store
exec fish --command night_light
# See apps that want to be started at boot
# dex --dry-run --autostart --environment sway





### Modes

# Resizing containers
mode "resize" {
    bindsym $left resize shrink width $move_strength
    bindsym $down resize grow height $move_strength
    bindsym $up resize shrink height $move_strength
    bindsym $right resize grow width $move_strength
    # With arrow keys
    bindsym Left resize shrink width $move_strength
    bindsym Down resize grow height $move_strength
    bindsym Up resize shrink height $move_strength
    bindsym Right resize grow width $move_strength
    # Return to default mode
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Power menu
mode "power" {
    bindsym s exec systemctl poweroff
    bindsym r exec systemctl reboot
    bindsym l exit
    # Return to default mode
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "power"

# Quick launcher
mode "open" {
    bindsym f exec firefox
    bindsym t exec thunderbird
    bindsym v exec code
    bindsym d exec discord
    bindsym s exec LD_PRELOAD=/usr/lib/spotify-adblock.so spotify
    bindsym c exec qalculate-gtk
    bindsym p exec pinta
    bindsym l exec gcolor3
    bindsym o exec obsidian
    bindsym a exec anki
    bindsym i exec signal-desktop-beta
    # Return to default mode
    bindsym Escape mode "default"
}
bindsym $mod+o mode "open"






### Key bindings

# Terminal
bindsym $mod+Return exec kitty

# Kill focused window
bindsym $mod+Shift+q kill

# Launcher
bindsym $mod+p exec rofi -show drun
bindsym $mod+Shift+p exec rofi -show run

# Reload the configuration file
bindsym $mod+Shift+c reload

# Split direction
bindsym $mod+b splith
bindsym $mod+v splitv

# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Floating mode
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent

# Scratchpad
bindsym $mod+Shift+BackSpace move scratchpad
bindsym $mod+BackSpace scratchpad show

# Alt+tab behavior
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Shift+Tab move container to workspace back_and_forth

# Move between adjacent workspace
bindsym $mod+Prior workspace prev
bindsym $mod+Next workspace next
bindsym $mod+Shift+Prior move container to workspace prev
bindsym $mod+Shift+Next move container to workspace next

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# With arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window
bindsym $mod+Shift+$left move left $move_strength
bindsym $mod+Shift+$down move down $move_strength
bindsym $mod+Shift+$up move up $move_strength
bindsym $mod+Shift+$right move right $move_strength
# With arrow keys
bindsym $mod+Shift+Left move left $move_strength
bindsym $mod+Shift+Down move down $move_strength
bindsym $mod+Shift+Up move up $move_strength
bindsym $mod+Shift+Right move right $move_strength

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Sreen brightness controls
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
set $toggle_screen output $laptop power toggle; output $monitor power toggle
bindsym XF86ScreenSaver $toggle_screen

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Touchpad toggle
bindsym XF86TouchpadToggle exec swaymsg input type:touchpad events toggle enabled disabled \
    && notify-send "Touchpad toggled" -u low -t 1000

# Screenshots
set $screenshot_path ~/Pictures/Screenshots/$(date +%s).png
# Focused screen
bindsym Print exec grimshot --notify copy output
bindsym Shift+Print exec grimshot --notify save output $screenshot_path
# Focsued window
bindsym $mod+Print exec grimshot --notify copy active
bindsym $mod+Shift+Print exec grimshot --notify save active $screenshot_path
# Area
bindsym Ctrl+Print exec grimshot --notify copy area
bindsym Ctrl+Shift+Print exec grimshot --notify save area $screenshot_path
# Edit
bindsym Alt+Print exec wl-paste | swappy --file -

# Lock and toggle screen
bindsym $mod+x exec systemctl suspend
bindsym $mod+Shift+x exec loginctl lock-session
bindsym $mod+z $toggle_screen

# Notifications
bindsym $mod+Shift+n exec makoctl restore
bindsym $mod+n exec makoctl dismiss --all

# Screen colors
bindsym $mod+i exec fish --command invert
bindsym $mod+u exec fish --command night_light

# Clipboard history
bindsym $mod+y exec clipman pick --tool rofi
bindsym $mod+Shift+y exec clipman clear --all

# Mouse control
bindsym $mod+m exec warpd --hint
bindsym $mod+Shift+m exec warpd --normal



# Focus workspace 1 at startup
workspace 1
