# Screenshot
set $save_screenshot xclip -selection clipboard -t image/png -o > ~/Pictures/Screenshots/$(date +%s).png
bindsym Print exec --no-startup-id  maim | xclip -selection clipboard -t image/png && notify-send "Took screenshot of the screen" -u low -i camera-photo && $save_screenshot
bindsym Ctrl+Print exec --no-startup-id maim -i $(xdotool getactivewindow) -B | xclip -selection clipboard -t image/png && notify-send "Took screenshot of the window" -u low -i camera-photo && $save_screenshot
bindsym Shift+Print exec --no-startup-id maim -s -B -b 2 -b 2 -k | xclip -selection clipboard -t image/png && notify-send "Took screenshot of the selection" -u low -i camera-photo && $save_screenshot
bindsym $mod+Print exec --no-startup-id flameshot gui -c && $save_screenshot

